<h1 align="center" >Create  new Category </h1>
<%= render 'shared/errors', obj: @category %>

<div class="row">
<div class="col-xs-12">
<%= form_for(@category, :html => {class: 'form-horizontal',role:'form'})do |f| %>
<div class="form-group">
	<div class="control-label col-md-offset-2 col-md-1">
		<%= f.label :name  %>
		</div>
		<div class ="col-md-6">
		<%= f.text_field :name ,class:"form-control",placeholder: "Enter Category name", autofocus:true %>
		</div>
		</div>

		
		

		<div class="form-group">
		<div class ="col-md-offset-5 col-md-4">

		<%= f.submit class:"btn btn-primary btn-lg" %>	
		
		</div>
		</div>


<% end %>
<div class="col-md-offset-5 col-md-4">
[ <%= link_to 'Back to Article Listing', articles_path %> ]
</div>
</div>
</div>
