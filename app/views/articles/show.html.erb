
<h2 align="center"	>Title:<%= @article.title %></h2>
<div class="col-md-offset-2 col-md-8">
<div class="well">
<% if @article.user %>
<ul class="listing">
	<div class="row center" >
	<div class="col-md-5 col-md-offset-4">
	<li>Created by:</li>

	<li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
	<li class="article-title">
	<%= link_to @article.user.username, user_path(@article.user) %>
	</li>
	<li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
</div>
</div>
</ul>
<% end %>
<h4 class="center description"><strong>Description</strong></h4>

<hr>
	<%= simple_format(@article.description) %>
	<div class="article_actions">
	<% if logged_in? && (current_user == @article.user || current_user.admin? %>

 <%= link_to 'Edit this Article ', edit_article_path(@article), class: "btn btn-primary btn-xs" %>
 <%= link_to "Delete this Article", article_path(@article), method: :delete, data: {confirm:"Are you you want to delete this article"},
                                                                                class:"btn btn-danger btn-xs" %>
                      <% end %>

 <%= link_to 'View all Articles ', articles_path, class: "btn btn-success btn-xs" %> 

 </div>
 </div>
 </div>