<h1>Listing All Article</h1>
 <p><%= link_to 'Create new article', new_article_path %></p>
<table>
<tr>
	<th>Title:</th>
	<th>|</th>
	<th>Description:</th>
	

</tr>
<% @articles.each do |article| %>
<tr>
	<td><%= article.title %> </td> <td>|</td>
	<td><%= article.description %></td>
	<td><%= link_to 'Edit  article', edit_article_path(article) %></td>
	<td><%= link_to 'Show article', article_path(article) %></td>
   <td><%= link_to 'Delete Article', article_path(article), method: :delete, data: {confirm: "Are you sure you want to Delete?"} %></td>

</tr>
<% end %>
</table>