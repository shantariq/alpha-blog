<h1 align="center">Listing All Article</h1>

 
<% @articles.each do |article| %>
<div class="row">
<div class="col-md-offset-2 col-md-8">
<div class="well well-lg">
<div class="article-title"> 

	<%=link_to article.title, article_path(article) %> 
	</div>
	<div class="article-body">
	<%= truncate(article.description, length: 100) %>
	</div>
		<div class="article_actions">

	<%= link_to 'Edit this Article ', edit_article_path(article), class: "btn btn-primary btn-xs" %>
 <%= link_to "Delete this Article", article_path(article), method: :delete, data: {confirm:"Are you you want to delete this article"},
                                                                                class:"btn btn-danger btn-xs" %>

  </div>
  </div>
  </div>
  </div>

<% end %>
